{
    "name": "Better Blur",
    "author": "the_bukkit",
    "version": "v1.0",
    "manifest_version": 5,
    "description": "Allows customization of the blur effect",
    "target": "Tweak",
    "inject": {
        "shared.css": ["SP"]
    },
    "patches": {
        "Blur Strength": {
            "type": "slider",
            "default": "4",
            "values": {
                "Off": {
                    "--blur": ["0px", "SP"]
                },
                "1": {
                    "--blur": ["1px", "SP"]
                },
                "2": {
                    "--blur": ["2px", "SP"]
                },
                "3": {
                    "--blur": ["3px", "SP"]
                },
                "4": {
                    "--blur": ["4px", "SP"]
                },
                "5": {
                    "--blur": ["5px", "SP"]
                },
                "6": {
                    "--blur": ["6px", "SP"]
                },
                "7": {
                    "--blur": ["7px", "SP"]
                },
                "8": {
                    "--blur": ["8px", "SP"]
                },
                "9": {
                    "--blur": ["9px", "SP"]
                },
                "10": {
                    "--blur": ["10px", "SP"]
                }
            }
        },
        "Opacity": {
            "type": "slider",
            "default": "0.5",
            "values": {
                "0.0": {
                    "--opacity": ["0.0", "SP"]
                },
                "0.1": {
                    "--opacity": ["0.1", "SP"]
                },
                "0.2": {
                    "--opacity": ["0.2", "SP"]
                },
                "0.3": {
                    "--opacity": ["0.3", "SP"]
                },
                "0.4": {
                    "--opacity": ["0.4", "SP"]
                },
                "0.5": {
                    "--opacity": ["0.5", "SP"]
                },
                "0.6": {
                    "--opacity": ["0.6", "SP"]
                },
                "0.7": {
                    "--opacity": ["0.7", "SP"]
                },
                "0.8": {
                    "--opacity": ["0.8", "SP"]
                },
                "0.9": {
                    "--opacity": ["0.9", "SP"]
                },
                "1.0": {
                    "--opacity": ["1.0", "SP"]
                }
            }
        }
    }
}
